                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="javascript:void()"><i class="fa-solid fa-user-gear mr-2"></i>Sample notification</a>
                </div>
            </li>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle rmDrop" data-toggle="dropdown" id="notifications" href="javascript:void()">
                    <i class="fa-solid fa-list-ul"></i>
                </a>
                <div class="dropdown-menu dropdown-menu-right dGrid" aria-labelledby="notifications">
                    <div class="row m-0">
                        <div class="col-4 p-0">
                            <a class="dropdown-item text-wrap" href="~/Home/VendorPage">
                                <i class="fa-solid fa-handshake"></i>
                                <p class="small">Vendor Page</p>
                            </a>
                        </div>
                        <div class="col-4 p-0">
